<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<settings>
<!--		결과 VO 매핑 시, Snake 표기법을 Camel 표기로 자동 변경하여 매핑-->
		<setting name="mapUnderscoreToCamelCase" value="true" />
<!--		query 결과가 Null이면 ""러 변환되지 말고 Null로 받도록 설정-->
		<setting name="callSettersOnNulls" value="true" />
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>
	
	<typeAliases>
        <typeAlias alias="Users" type="com.UnderTheKorea.web.domain.Users"/>
        <typeAlias alias="Posts" type="com.UnderTheKorea.web.domain.Posts"/>
        <typeAlias alias="Comments" type="com.UnderTheKorea.web.domain.Comments"/>
        <typeAlias alias="Polls" type="com.UnderTheKorea.web.domain.Polls"/>
        <typeAlias alias="Polls" type="com.UnderTheKorea.web.domain.Votes"/>
    </typeAliases>
    
</configuration>